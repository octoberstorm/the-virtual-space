<!-- Search Bar -->
<div class="container mx-auto mt-4 p-4 w-1/3">
  <%= form_with(url: dashboard_path, method: :get, class: "flex items-center border rounded-md") do |form| %>
    <%= form.text_field :search, class: "p-2 w-full rounded-l-md", placeholder: "Search...", value: @search %>
    <%= form.submit "Search", class: "bg-blue-500 text-white p-2 rounded-r-md" %>
  <% end %>
</div>
