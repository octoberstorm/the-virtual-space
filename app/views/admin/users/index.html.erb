<div class="container mx-auto mt-8">
  <h2 class="text-2xl font-bold mb-4">Admin Users</h2>

  <%= link_to 'New User', new_admin_user_path, class: 'bg-blue-500 text-white px-4 py-2 rounded mb-4' %>

  <table class="min-w-full border border-gray-300">
    <thead>
      <tr class="bg-gray-200">
        <th class="border px-4 py-2">ID</th>
        <th class="border px-4 py-2">Role</th>
        <th class="border px-4 py-2">Name</th>
        <th class="border px-4 py-2">Email</th>
        <th class="border px-4 py-2">Posts</th>
        <th class="border px-4 py-2">Comments</th>
        <th class="border px-4 py-2">Likes</th>
        <th class="border px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="border px-4 py-2"><%= user.id %></td>
          <td class="border px-4 py-2"><%= user.admin ? "Admin" : "User" %></td>
          <td class="border px-4 py-2"><%= user.name %></td>
          <td class="border px-4 py-2"><%= user.email %></td>
          <td class="border px-4 py-2"><%= user.posts.count %></td>
          <td class="border px-4 py-2"><%= user.comments.count %></td>
          <td class="border px-4 py-2"><%= user.likes.count %></td>
          <td class="border px-4 py-2">
            <%= link_to 'Show', admin_user_path(user), class: 'text-blue-500' %>
            <%= link_to 'Edit', edit_admin_user_path(user), class: 'text-yellow-500 ml-2' %>
            <%= button_to "Delete", admin_user_path(user), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'text-red-500 ml-2' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
