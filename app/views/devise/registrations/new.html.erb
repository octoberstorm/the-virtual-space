<h2 class="text-2xl font-bold mb-4 text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :name, class: "block font-semibold mb-2" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block font-semibold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block font-semibold" %>
    <% if @minimum_password_length %>
    <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block font-semibold" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="mt-8">
    <%= f.submit "Sign up", class: "w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600" %>
  </div>
<% end %>

<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
