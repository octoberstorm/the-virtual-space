<h2 class="text-2xl font-bold mb-4 text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}, html: { class: "max-w-sm mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block font-semibold mb-2" %><br />
    <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block font-semibold mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "font-semibold" %>
    </div>
  <% end %>

  <div class="flex justify-center">
    <%= f.submit "Log in", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  </div>
<% end %>

<div class="text-center py-4">
  <%= render "devise/shared/links" %>
</div>
